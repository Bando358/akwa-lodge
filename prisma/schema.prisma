// Akwa Luxury Lodge - Schéma de base de données
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTHENTIFICATION & UTILISATEURS
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          Role      @default(EDITOR)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  EDITOR
}

// ============================================
// CHAMBRES & HÉBERGEMENT
// ============================================

model Chambre {
  id                String   @id @default(cuid())
  nom               String
  slug              String   @unique
  type              String   @default("Chambre") // Type: Suite, Bungalow, Chambre, Villa, etc.
  description       String   @db.Text
  descriptionCourte String   @db.VarChar(300)
  videoUrl          String?  // URL de la vidéo de présentation
  prix              Decimal  @db.Decimal(10, 2)
  prixWeekend       Decimal? @db.Decimal(10, 2)
  capacite          Int
  superficie        Int?
  nombreLits        Int      @default(1)
  typeLit           String?
  vue               String?
  etage             Int?
  equipements       String[]
  caracteristiques  String[]
  isActive          Boolean  @default(true)
  isFeatured        Boolean  @default(false)
  ordre             Int      @default(0)

  images       Image[]
  reservations Reservation[]
  promotions   Promotion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive, ordre])
}

// ============================================
// SERVICES
// ============================================

model Service {
  id                String      @id @default(cuid())
  nom               String
  slug              String      @unique
  description       String      @db.Text
  descriptionCourte String      @db.VarChar(300)
  type              ServiceType
  icone             String?
  prix              Decimal?    @db.Decimal(10, 2)
  prixDescription   String?
  horaires          String?
  capacite          Int?
  duree             String?
  inclus            String[]
  isActive          Boolean     @default(true)
  isFeatured        Boolean     @default(false)
  ordre             Int         @default(0)

  images     Image[]
  promotions Promotion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type, isActive, ordre])
}

enum ServiceType {
  RESTAURATION
  ACTIVITE
  BIEN_ETRE
  PISCINE
  TRANSPORT
  AUTRE
}

// ============================================
// ÉVÉNEMENTS & CONFÉRENCES
// ============================================

model Evenement {
  id                String        @id @default(cuid())
  titre             String
  slug              String        @unique
  description       String        @db.Text
  descriptionCourte String        @db.VarChar(300)
  type              EvenementType
  dateDebut         DateTime
  dateFin           DateTime?
  heureDebut        String?
  heureFin          String?
  lieu              String?
  capaciteMin       Int?
  capaciteMax       Int?
  prix              Decimal?      @db.Decimal(10, 2)
  prixDescription   String?
  equipements       String[]
  inclus            String[]
  isActive          Boolean       @default(true)
  isFeatured        Boolean       @default(false)

  images Image[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type, isActive, dateDebut])
}

enum EvenementType {
  EVENEMENT
  CONFERENCE
  MARIAGE
  SEMINAIRE
  TEAM_BUILDING
  RECEPTION
}

// ============================================
// GALERIE & MÉDIAS
// ============================================

model Image {
  id          String   @id @default(cuid())
  url         String
  alt         String?
  titre       String?
  description String?  @db.Text
  categorie   String?
  width       Int?
  height      Int?
  size        Int?
  format      String?
  ordre       Int      @default(0)
  isFeatured  Boolean  @default(false)

  // Relations
  chambreId   String?
  chambre     Chambre?   @relation(fields: [chambreId], references: [id], onDelete: SetNull)
  serviceId   String?
  service     Service?   @relation(fields: [serviceId], references: [id], onDelete: SetNull)
  evenementId String?
  evenement   Evenement? @relation(fields: [evenementId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([categorie, ordre])
  @@index([chambreId])
  @@index([serviceId])
  @@index([evenementId])
}

// ============================================
// RÉSERVATIONS
// ============================================

model Reservation {
  id                String            @id @default(cuid())
  numero            String            @unique @default(cuid())

  // Informations client
  civilite          String?
  nom               String
  prenom            String
  email             String
  telephone         String
  pays              String?
  ville             String?

  // Détails réservation
  dateArrivee       DateTime
  dateDepart        DateTime
  nombreAdultes     Int               @default(1)
  nombreEnfants     Int               @default(0)

  // Chambre
  chambreId         String?
  chambre           Chambre?          @relation(fields: [chambreId], references: [id], onDelete: SetNull)

  // Demandes spéciales
  message           String?           @db.Text
  demandesSpeciales String[]

  // Statut et suivi
  statut            ReservationStatut @default(EN_ATTENTE)
  source            String?           @default("site_web")

  // Notes internes
  notesInternes     String?           @db.Text

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([statut, dateArrivee])
  @@index([email])
}

enum ReservationStatut {
  EN_ATTENTE
  CONFIRMEE
  ANNULEE
  TERMINEE
}

// ============================================
// CONTACTS & MESSAGES
// ============================================

model Contact {
  id         String       @id @default(cuid())
  nom        String
  prenom     String?
  email      String
  telephone  String?
  sujet      ContactSujet
  message    String       @db.Text
  isRead     Boolean      @default(false)
  isArchived Boolean      @default(false)

  // Réponse
  reponse    String?      @db.Text
  reponduLe  DateTime?

  createdAt  DateTime     @default(now())

  @@index([isRead, isArchived, createdAt])
}

enum ContactSujet {
  INFORMATION
  RESERVATION
  EVENEMENT
  RECLAMATION
  PARTENARIAT
  AUTRE
}

// ============================================
// TÉMOIGNAGES
// ============================================

model Temoignage {
  id         String    @id @default(cuid())
  nom        String
  pays       String?
  photo      String?
  note       Int       @default(5)
  texte      String    @db.Text
  dateVisite DateTime?
  isApproved Boolean   @default(false)
  isActive   Boolean   @default(true)
  ordre      Int       @default(0)

  createdAt  DateTime  @default(now())

  @@index([isApproved, isActive, ordre])
}

// ============================================
// PARAMÈTRES DU SITE
// ============================================

model SiteSettings {
  id          String  @id @default(cuid())
  key         String  @unique
  value       String  @db.Text
  type        String  @default("text")
  groupe      String?
  label       String?
  description String?

  updatedAt   DateTime @updatedAt

  @@index([groupe])
}

// ============================================
// MENUS RESTAURANT
// ============================================

model MenuCategorie {
  id          String   @id @default(cuid())
  nom         String
  description String?
  ordre       Int      @default(0)
  isActive    Boolean  @default(true)

  plats       Plat[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Plat {
  id           String        @id @default(cuid())
  nom          String
  description  String?       @db.Text
  prix         Decimal       @db.Decimal(10, 2)
  image        String?
  allergenes   String[]
  isVegetarian Boolean       @default(false)
  isVegan      Boolean       @default(false)
  isSpicy      Boolean       @default(false)
  isActive     Boolean       @default(true)
  ordre        Int           @default(0)

  categorieId  String
  categorie    MenuCategorie @relation(fields: [categorieId], references: [id], onDelete: Cascade)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([categorieId, isActive, ordre])
}

// ============================================
// NEWSLETTER
// ============================================

model Newsletter {
  id        String   @id @default(cuid())
  email     String   @unique
  nom       String?
  isActive  Boolean  @default(true)
  source    String?  @default("site_web")

  createdAt DateTime @default(now())
}

// ============================================
// ANNONCES & PROMOTIONS
// ============================================

model Annonce {
  id            String       @id @default(cuid())
  titre         String
  description   String?      @db.Text
  mediaType     MediaType    @default(TEXT)
  mediaUrl      String?
  mediaDuration Int?         // Durée en secondes pour les vidéos (3-5s)
  lien          String?      // Lien externe optionnel
  boutonTexte   String?      // Texte du bouton CTA

  // Ciblage
  cibleType     AnnonceCible @default(GENERAL)

  // Période d'affichage
  dateDebut     DateTime
  dateFin       DateTime

  // Options d'affichage
  position      AnnoncePosition @default(ACCUEIL)
  couleurFond   String?      // Couleur de fond personnalisée
  couleurTexte  String?      // Couleur de texte personnalisée

  // Statut
  ordre         Int          @default(0)
  isActive      Boolean      @default(true)
  isPinned      Boolean      @default(false) // Épinglée en haut

  // Relations optionnelles
  promotionId   String?
  promotion     Promotion?   @relation(fields: [promotionId], references: [id], onDelete: SetNull)

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([isActive, dateDebut, dateFin])
  @@index([position, ordre])
}

enum MediaType {
  TEXT
  IMAGE
  VIDEO
}

enum AnnonceCible {
  GENERAL
  HEBERGEMENT
  RESTAURATION
  ACTIVITES
  EVENEMENTS
  PROMOTIONS
}

enum AnnoncePosition {
  ACCUEIL
  HEBERGEMENT
  RESTAURATION
  ACTIVITES
  EVENEMENTS
  TOUTES_PAGES
  POPUP
  BANNIERE
}

model Promotion {
  id              String           @id @default(cuid())
  nom             String
  description     String?          @db.Text

  // Type de réduction
  type            PromotionType    @default(POURCENTAGE)
  valeur          Decimal          @db.Decimal(10, 2) // Pourcentage ou montant

  // Cible de la promotion
  cible           PromotionCible   @default(TOUS)

  // Relations optionnelles pour cibler spécifiquement
  chambreId       String?
  chambre         Chambre?         @relation(fields: [chambreId], references: [id], onDelete: SetNull)
  serviceId       String?
  service         Service?         @relation(fields: [serviceId], references: [id], onDelete: SetNull)

  // Code promo optionnel
  codePromo       String?          @unique

  // Période de validité
  dateDebut       DateTime
  dateFin         DateTime

  // Conditions
  conditions      String?          @db.Text
  montantMinimum  Decimal?         @db.Decimal(10, 2) // Montant minimum d'achat

  // Limites d'utilisation
  usageMax        Int?             // Nombre maximum d'utilisations
  usageActuel     Int              @default(0)
  usageParClient  Int?             @default(1) // Limite par client

  // Statut
  isActive        Boolean          @default(true)

  // Relations
  annonces        Annonce[]

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([isActive, dateDebut, dateFin])
  @@index([codePromo])
  @@index([cible])
}

enum PromotionType {
  POURCENTAGE     // Ex: -20%
  MONTANT_FIXE    // Ex: -5000 FCFA
  OFFRE_SPECIALE  // Ex: 3ème nuit offerte
  PACK            // Ex: Chambre + Petit-déj
}

enum PromotionCible {
  TOUS
  CHAMBRE
  RESTAURATION
  PISCINE
  ACTIVITE
  BIEN_ETRE
  EVENEMENT
}
